{
    "compilerOptions": {
        "strict": true,
        "target": "ES6",
        "outDir": "dist",
        "outFile": "dist/dashi.js",
        "module": "amd",
        "moduleResolution": "node",
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "es2018",
            "es2019",
            "esnext",
            "dom",
            "dom.iterable",
        ],
        "downlevelIteration": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "typeRoots": [
            "node_modules/@types",
            "src/types",
        ]
    },
    "exclude": [
        "node_modules",
        "*/*.test.ts",
    ]
}