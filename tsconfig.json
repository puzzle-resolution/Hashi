{
    "compilerOptions": {
        "strict": true,
        "target": "ES2015",
        "outDir": "dist",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "es2018",
            "es2019",
            "esnext",
            "dom"
        ],
        "downlevelIteration": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
    },
    "exclude": [
        "node_modules"
    ]
}